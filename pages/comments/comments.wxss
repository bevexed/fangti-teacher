/* pages/comments/comments.wxss */

.comments{
  margin: 40rpx;
}

.img-list{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.edit{
  width: 120rpx;
  height: 56rpx;
}

.btn{
  display: block;
  margin: 20rpx auto;
  width: 258rpx;
  height:238rpx
}

.end_r{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}

.cancel{
  width:210rpx;
height:92rpx;
border-radius:46rpx;
border:4rpx solid rgba(255,192,24,1);
