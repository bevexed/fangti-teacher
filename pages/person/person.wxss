/* pages/person/person.wxss */

.header {
  width: 100vw;
  height: 284rpx;
  background: linear-gradient(#00e0b4 0%, #00e0b4 50%, transparent 50%, transparent 100%);
  border-top: 1rpx solid #00e0b4;
}

.avatar {
  display: block;
  margin: 50rpx auto 36rpx;
  width: 192rpx;
  height: 192rpx;
  background: rgba(255, 255, 255, 1);
  border: 4rpx solid #fff;
  border-radius: 50%;
}

.money {
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 192, 24, 1);
  line-height: 44rpx;
}

.ul {
  display: flex;
  flex-direction: column;
  width: 670rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4rpx 36rpx 0px rgba(122, 137, 130, 0.14);
  border-radius: 32rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin: 40rpx auto;
}

.li {
  position: relative;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f5f6f8;
  padding: 16rpx 0;
}

.li:last-child {
  border: none;
}

.li >image {
  width: 96rpx;
  height: 96rpx;
}

.li>view {
  flex-grow: 1;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(93, 100, 115, 1);
}

.li::after {
  position: absolute;
  right: 0;
  height: 10rpx;
  width: 10rpx;
  border-bottom: 2px solid #bbbfc6;
  border-right: 2px solid #bbbfc6;
  transform: rotate(-45deg);
  content: '';
  color: #bbbfc6;
  font-size: 28rpx;
}
