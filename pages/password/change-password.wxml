<!--pages/password/change-password.wxml-->
<view class="with-draw">

  <view class="input-wrap">
   <input placeholder-class="input" data-type="password" type="password" placeholder="请输入旧密码" bindinput="input"></input>
  </view>

   <view class="input-wrap">
   <input placeholder-class="input" data-type="new_password" type="password" placeholder="请输入新密码" bindinput="input"></input>
  </view>

   <view class="input-wrap">
   <input placeholder-class="input" data-type="new_password_confirmation" type="password" placeholder="请再次确认密码" bindinput="input"></input>
  </view>

    <button class="button" bindtap="changePassword">确定</button>

</view>
